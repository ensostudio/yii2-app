{
    "name": "ensostudio/yii2-app",
    "description": "Yii2 application",
    "keywords": ["yii2", "application"],
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/ensostudio/yii2-app/issues?state=open",
        "wiki": "https://github.com/ensostudio/yii2-app/wiki",
        "source": "https://github.com/ensostudio/yii2-app"
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "symfony/polyfill": "^1.23",
        "yiisoft/yii2": "^2.0",
        "yiisoft/yii2-bootstrap5": "^2.0",
        "yiisoft/yii2-swiftmailer": "^2.1",
        "yiisoft/yii2-imagine": "^2.3"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "^2.1",
        "yiisoft/yii2-gii": "^2.2",
        "yiisoft/yii2-faker": "^2.0",
        "codeception/codeception": "^4.1",
        "codeception/specify": "^0.4",
        "codeception/verify": "^1.5",
        "codeception/module-asserts": "^1.3",
        "codeception/module-yii2": "^1.1",
        "codeception/module-filesystem": "^1.0",
        "symfony/browser-kit": "^4.4",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "app\\": ["src/", "modules/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\unit\\": "tests/unit/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 600,
        "fxp-asset": {
            "enabled": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0775",
                    "tests/_data": "0775",
                    "tests/_output": "0755",
                    "public/assets": "0755",
                    "yii": "0775"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
